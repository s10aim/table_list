<div class="container-fluid base-container my-5" style="max-width: 600px;">
  <%= form_with model: @language, local: true do |form| %>
    <div class="form-group">
      <%= form.label :content, "編集内容" %>
      <%= form.text_field :content, class: "form-control" %>
    </div>
    <%= form.submit "更新", class: "btn btn-primary mt-4" %>
  <% end %>
</div>
